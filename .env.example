# =============================
# UNS-ClaudeJP 5.0 - Root Environment Example
# =============================
# Copy this file to `.env` for docker-compose based development.
# Secrets must be overridden locally (never commit `.env`).

# ---- Database ----
POSTGRES_DB=uns_claudejp
POSTGRES_USER=uns_admin
POSTGRES_PASSWORD=change-me-in-local
DATABASE_URL=postgresql://uns_admin:change-me-in-local@localhost:5432/uns_claudejp

# ---- Security ----
SECRET_KEY=change-me-to-a-64-byte-token
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480
JWT_AUDIENCE=uns-claudejp::api
JWT_ISSUER=uns-claudejp

# ---- Application ----
APP_NAME=UNS-ClaudeJP 5.0
APP_VERSION=5.0.1
ENVIRONMENT=development
DEBUG=true
FRONTEND_URL=http://localhost:3000
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ---- File Storage ----
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760
REPORTS_DIR=./reports
LOG_FILE=./logs/uns-claudejp.log
LOG_LEVEL=INFO

# ---- OCR & AI Providers (optional) ----
OCR_ENABLED=true
TESSERACT_LANG=jpn+eng
GEMINI_API_KEY=
GOOGLE_CLOUD_VISION_ENABLED=false
GOOGLE_CLOUD_VISION_API_KEY=
AZURE_COMPUTER_VISION_ENDPOINT=
AZURE_COMPUTER_VISION_KEY=
AZURE_COMPUTER_VISION_API_VERSION=2023-02-01-preview

# ---- Notifications ----
LINE_CHANNEL_ACCESS_TOKEN=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@uns-kikaku.com

# ---- Observability ----
ENABLE_TELEMETRY=true
OTEL_SERVICE_NAME=uns-claudejp-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4317
OTEL_METRICS_EXPORT_INTERVAL_MS=60000
PROMETHEUS_METRICS_PATH=/metrics

# ---- Frontend Shared ----
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_VERSION=5.0.1
NEXT_PUBLIC_APP_NAME=UNS-ClaudeJP 5.0
NEXT_PUBLIC_AUTH_TOKEN_MAX_AGE=28800
NEXT_PUBLIC_OTEL_EXPORTER_URL=http://localhost:4318/v1/traces
NEXT_PUBLIC_GRAFANA_URL=http://localhost:3001

# ---- Internal networking for docker compose ----
INTERNAL_API_URL=http://backend:8000/api
